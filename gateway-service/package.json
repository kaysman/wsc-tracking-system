{
  "name": "gateway-service",
  "version": "1.0.0",
  "description": "API Gateway for the Water Supply Committee Tracking System. Acts as the single public entry point for all client requests, handling JWT authentication, routing, rate limiting, and request forwarding to internal microservices.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/index.ts\""
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "express-http-proxy": "^2.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "@types/express": "^4.17.21",
    "@types/express-http-proxy": "^1.6.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9"
  }
}
