{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication and authorization microservice for the Water Supply Committee Tracking System. Manages user accounts, roles, and permissions, and issues JWT tokens for secure access across all services.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/index.ts\""
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "axios": "^1.7.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "@types/body-parser": "^1.19.5",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9"
  }
}
